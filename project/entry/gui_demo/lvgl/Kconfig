menu "LVGL GUI Demo Menu"

choice
    prompt "LittlevGL demo choice"
    default LVGL_BENCHMARK_TEST

    config LVGL_BENCHMARK_TEST
        bool "LittlevGL benchmark test"

    config LVGL_STRESS_TEST
        bool "LittlevGL stress test"

    config LVGL_WIDGET_TEST
        bool "LittlevGL widget test"

    config LVGL_MUSIC_TEST
        bool "LittlevGL music test"

    config LVGL_KEYPAD_ENCODER_TEST
        bool "LittlevGL keypad test"

    config LVGL_MULTILANG_TEST
        bool "LittlevGL multilang test"

    config LVGL_TRANSFORM_TEST
        bool "LittlevGL transform test"

    config LVGL_FLEX_LAYOUT_TEST
        bool "LittlevGL flex layout test"

    config LVGL_SCROLL_TEST
        bool "LittlevGL scroll test"
endchoice

endmenu
